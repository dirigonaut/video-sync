{
  "serverInfo": {
    "port" : 8080,
    "staticDir" : "static",
    "threads": 0,
    "remoteAdminPass" : "password",
  },
  "redisConnection" : {
    "host" : "127.0.0.1",
    "port" : 6379,
    "password" : null
  },
  "external" : {
    "redis" : "redis-server",
    "ffmpeg" : "ffmpeg",
    "ffprobe" : "ffprobe"
  },
  "dirs" : {
    "configDir" : "/opt/video-sync/",
    "encodeDir" : "/opt/video-sync/encode/",
    "mediaDir" : "/opt/video-sync/media/",
    "serverLogDir" : "/var/log/video-sync/server/",
    "encodeLogDir" : "/var/log/video-sync/encoding/"
  },
  "templates" : {
    "1280v-256a": {
      "video": {
        "webm" : "-y -i {} -c:v libvpx-vp9 -s 1280x720 -keyint_min 150 -g 150 -b:v 1M -threads 4 -speed 1 -tile-columns 4 -frame-parallel 1 -an -sn -f webm -dash 1 {}"
      },
      "audio": {
        "webm" : "-y -i {} -vn -sn -c:a libvorbis -b:a 256k -f webm -dash 1 {}"
      },
      "subtitles" : {
        "webm" : "-y -txt_format text -i {} -map {} {}",
      },
      "manifest" : {
        "webm" : "-y {} -c copy -map {} -f webm_dash_manifest -adaptation_sets \"id=0,streams={} id=1,streams={}\" {}"
      }
    }
  },
  "ssl" : {
    "selfSign": true,
    "key" : "/opt/video-sync/keys/certificate.key",
    "crt" : "/opt/video-sync/keys/certificate.crt",
  },
  "log": {
    "logEncoding" : true,
    "levels" : {
      "ADMINISTRATION": "debug",
      "AUTHENTICATION": "debug",
      "DATABASE": "debug",
      "ENCODING": "debug",
      "GENERAL": "debug",
      "LOG": "debug",
      "STATE": "debug",
      "VIDEO": "debug",
      "UTILS": "debug"
    }
  }
}
